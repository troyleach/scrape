    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-6"><h3 class="text-muted">Image Collection</h3></div>
                <div class="col-sm-6"><span class='pull-right'><%= link_to images_path do %><%= fa_icon "home", class: "fa-2x" %><% end %></span></div>
            </div>
            <%= yield %>
        </div> <!-- /container -->
    </body>
</html>
