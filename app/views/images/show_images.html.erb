<div class="container">
    <p id="notice"><%= notice %></p>
    <div class="row">
        <% @scraped_data.each do |image| %>
            <div class="col-sm-6 col-md-4">
                <a href="<%= image[:src] %>" target='_blank'>
                    <div class="thumbnail">
                        <img src="<%= image[:src] %>" alt="Image not available" class='thumb-nail'>
                        <div class="caption">
                            <strong><%= image[:alt] || 'N/A' %></strong>
                        </div>
                    </div>
                </a>
            </div>
        <% end %>
    </div>
</div>
